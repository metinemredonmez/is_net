# ===========================================
# IOSP - Environment Variables
# ===========================================
#
# KURULUM:
# 1. Bu dosyayı .env olarak kopyalayın:
#    cp .env.example .env
#
# 2. Güvenli değerler oluşturun:
#    ./scripts/generate-secrets.sh
#
# 3. Veya manuel olarak değerleri güncelleyin
#
# ⚠️  UYARI: .env dosyasını ASLA git'e commit etmeyin!
# ===========================================

# -------------------------------------------
# Django Settings
# -------------------------------------------
DEBUG=True
# SECRET_KEY: generate-secrets.sh ile oluşturun veya manuel girin
# En az 50 karakter, rastgele string olmalı
SECRET_KEY=CHANGE_ME_GENERATE_WITH_SCRIPT
ALLOWED_HOSTS=localhost,127.0.0.1

# -------------------------------------------
# Database (PostgreSQL)
# -------------------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=iosp_db
DB_USER=iosp_user
# DB_PASSWORD: generate-secrets.sh ile oluşturun
DB_PASSWORD=CHANGE_ME_GENERATE_WITH_SCRIPT

# -------------------------------------------
# Redis (Cache & Celery)
# -------------------------------------------
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1

# -------------------------------------------
# Qdrant (Vector Database)
# -------------------------------------------
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=iosp_documents

# -------------------------------------------
# Ollama (Local LLM)
# -------------------------------------------
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# -------------------------------------------
# RAG Settings
# -------------------------------------------
CHUNK_SIZE=1000
CHUNK_OVERLAP=200

# -------------------------------------------
# Admin User (İlk kurulumda oluşturulur)
# -------------------------------------------
ADMIN_EMAIL=admin@iosp.local
# ADMIN_PASSWORD: generate-secrets.sh ile oluşturun
ADMIN_PASSWORD=CHANGE_ME_GENERATE_WITH_SCRIPT

# -------------------------------------------
# Security (Production için)
# -------------------------------------------
# SECURE_SSL_REDIRECT=True
# SECURE_HSTS_SECONDS=31536000
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
